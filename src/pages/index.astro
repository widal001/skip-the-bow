---
// src/pages/index.astro
import Layout from "../layouts/Layout.astro";
import GiftIdeaCard from "../components/GiftIdeaCard.astro";
import { getGiftIdeas } from "../lib/idea-service";

const ideas = await getGiftIdeas();
---

<Layout
  title="Skip the Bow"
  description="A gift guide for people who'd rather not get gifts â€” and would rather support local businesses, nonprofits, and experiences."
>
  <h1>Skip the Bow</h1>
  <div class="gift-grid">
    {ideas.map((idea) => <GiftIdeaCard gift={idea} />)}
  </div>
</Layout>

<style>
  .gift-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 2rem;
    margin-top: 2rem;
  }
</style>
