---
// src/pages/index.astro
import Layout from "../layouts/Layout.astro";
import HeroBanner from "../components/HeroBanner.astro";
import GiftGallery from "../components/GiftGallery.astro";
import { getGiftsByCategory } from "../lib/gift-service";
import { GiftCategory } from "../content/types";
import { db } from "../db";

const categories = [
  { id: GiftCategory.enum.subscription, title: "Subscriptions" },
  { id: GiftCategory.enum.experience, title: "Experiences" },
  { id: GiftCategory.enum.giftcard, title: "Gift Cards" },
  { id: GiftCategory.enum.other, title: "Other Gifts" },
];

const categoryGifts = await Promise.all(
  categories.map(async (category) => ({
    ...category,
    gifts: await getGiftsByCategory(db, category.id),
  }))
);
---

<Layout
  title="Skip the Bow"
  description="A gift guide for people who'd rather not get gifts â€” and would rather support local businesses, nonprofits, and experiences."
>
  <HeroBanner />

  {
    categoryGifts.map(({ id, title, gifts }) => {
      if (gifts.length === 0) return null;
      return <GiftGallery title={title} gifts={gifts} category={id} />;
    })
  }
</Layout>

<style>
  .description {
    font-size: 1.125rem;
    color: #4b5563;
    margin: 1rem 0 2rem;
    max-width: 600px;
  }

  .category-section {
    margin-bottom: 4rem;
  }

  .category-title {
    font-size: 1.5rem;
    font-weight: 600;
    color: #111827;
    margin-bottom: 1.5rem;
  }

  .gift-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 2rem;
  }
</style>
