---
interface Props {
  placeholder?: string;
}

const { placeholder = "Search gifts..." } = Astro.props;
---

<div class="search-bar">
  <input type="text" placeholder={placeholder} />
</div>

<style>
  .search-bar input {
    width: 100%;
    padding: 0.5rem;
    border: 1px solid #e5e7eb;
    border-radius: 4px;
    font-size: 1rem;
  }
</style>
