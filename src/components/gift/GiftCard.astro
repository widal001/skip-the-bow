---
import type { Gift } from "@/content/types";
import Pill from "@/components/Pill.astro";

interface Props {
  gift: Gift;
}

const { gift } = Astro.props;

// Truncate description to 120 characters
const truncatedDescription =
  gift.description.length > 255
    ? `${gift.description.slice(0, 255).trim()}...`
    : gift.description;
---

<a href={`/gifts/${gift.slug}`} class="gift-card" data-category={gift.category}>
  <div class="gift-card__header">
    <div class="gift-card__header-bg"></div>
    <h3 class="gift-card__title">{gift.name}</h3>
  </div>
  <div class="gift-card__content">
    <p class="gift-card__description" title={gift.description}>
      {truncatedDescription}
    </p>
    <div class="gift-card__footer">
      <div class="gift-card__tags">
        {
          gift.tags.map((tag) => (
            <Pill
              text={tag}
              color="var(--color-gray-900)"
              backgroundColor="var(--category-secondary)"
              borderColor="var(--category-accent)"
              size="small"
            />
          ))
        }
      </div>
      <p class="gift-card__price">
        ${gift.priceRange.min}â€“${gift.priceRange.max}
      </p>
    </div>
  </div>
</a>

<style>
  .gift-card {
    display: flex;
    flex-direction: column;
    text-decoration: none;
    color: inherit;
    background: var(--color-white);
    border-radius: 8px;
    box-shadow: 0 1px 3px var(--color-gray-200);
    transition:
      transform 0.2s ease,
      box-shadow 0.2s ease;
    overflow: hidden;
    height: 100%;
    width: 100%;
  }

  .gift-card:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 6px var(--color-gray-200);
  }

  .gift-card__header {
    width: 100%;
    height: 80px;
    overflow: hidden;
    position: relative;
    display: flex;
    align-items: flex-end;
    padding: 1rem;
    flex-shrink: 0;
  }

  .gift-card__header-bg {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    opacity: 0.1;
    background-color: var(--category-primary);
  }

  .gift-card__title {
    position: relative;
    margin: 0;
    font-size: 1.125rem;
    font-weight: 600;
    color: var(--color-gray-900);
    text-align: left;
    line-height: 1.4;
  }

  .gift-card__content {
    display: flex;
    flex-direction: column;
    padding: 1rem;
    flex: 1;
  }

  .gift-card__description {
    margin: 0;
    font-size: 0.875rem;
    color: var(--color-gray-600);
    line-height: 1.5;
    flex: 1;
    overflow: hidden;
    text-overflow: ellipsis;
  }

  .gift-card__footer {
    margin-top: auto;
    padding-top: 1rem;
  }

  .gift-card__tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.25rem;
    margin-bottom: 0.75rem;
  }

  .gift-card__price {
    margin: 0;
    font-size: 0.875rem;
    font-weight: 500;
    color: var(--color-gray-900);
  }
</style>
