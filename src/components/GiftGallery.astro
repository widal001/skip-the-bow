---
import type { Gift } from "../content/types";
import GiftIdeaCard from "./GiftIdeaCard.astro";

interface Props {
  title: string;
  gifts: Gift[];
  category: string;
}

const { title, gifts, category } = Astro.props;

// Limit the number of displayed gifts to 6
const displayedGifts = gifts.slice(0, 6);
---

<section class="gallery-section">
  <div class="gallery-header">
    <h2 class="gallery-title">{title}</h2>
    <a href={`/gifts?categories=${category}`} class="view-all">
      <span>View all</span>
      <svg
        width="16"
        height="16"
        viewBox="0 0 16 16"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"
        aria-hidden="true"
      >
        <path d="M3.3 8h9.4"></path>
        <path d="M8 3.3L12.7 8 8 12.7"></path>
      </svg>
    </a>
  </div>
  <div class="gallery-container">
    <div class="gallery-grid">
      {
        displayedGifts.map((gift) => (
          <div class="gallery-item">
            <GiftIdeaCard gift={gift} />
          </div>
        ))
      }
    </div>
  </div>
</section>

<style>
  .gallery-section {
    margin-bottom: 4rem;
  }

  .gallery-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 1.5rem;
    padding: 0 0.5rem;
  }

  .gallery-title {
    font-size: 1.5rem;
    font-weight: 600;
    color: var(--color-gray-900);
    margin: 0;
    margin-right: auto;
  }

  .view-all {
    color: var(--color-primary);
    text-decoration: none;
    font-weight: 500;
    padding: 0.5rem 0.75rem;
    margin-left: 1rem;
    border-radius: 6px;
    transition: all 0.2s ease;
    display: inline-flex;
    align-items: center;
    line-height: 1;
  }

  .view-all span {
    margin-right: 0.375rem;
  }

  .view-all svg {
    position: relative;
    top: -0.5px;
    transition: transform 0.2s ease;
  }

  .view-all:hover {
    background-color: var(--color-primary-light);
    color: var(--color-primary-dark);
    transform: translateX(2px);
  }

  .view-all:hover svg {
    transform: translateX(2px);
  }

  .gallery-container {
    overflow: hidden;
  }

  .gallery-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 2rem;
  }

  .gallery-item {
    width: 100%;
  }
</style>
