---
interface Props {
  text: string;
  color?: string;
  backgroundColor?: string;
  borderColor?: string;
  category?: string;
  size?: "small" | "medium" | "large";
}

const {
  text,
  color,
  backgroundColor,
  borderColor,
  category,
  size = "medium",
} = Astro.props;
---

<span
  class="pill"
  data-category={category}
  data-size={size}
  style={`
    ${color ? `--pill-color: ${color};` : ""}
    ${backgroundColor ? `--pill-bg: ${backgroundColor};` : ""}
    ${borderColor ? `--pill-border: ${borderColor};` : ""}
  `}
>
  {text}
</span>

<style>
  .pill {
    display: inline-block;
    background: var(--pill-bg, var(--category-secondary));
    color: var(--pill-color, var(--color-gray-900));
    border: 1px solid var(--pill-border, var(--category-accent));
    border-radius: 9999px;
    font-weight: 500;
    text-transform: capitalize;
  }

  .pill[data-size="small"] {
    padding: 0.25rem 0.5rem;
    font-size: 0.75rem;
  }

  .pill[data-size="medium"] {
    padding: 0.5rem 1rem;
    font-size: 0.875rem;
  }

  .pill[data-size="large"] {
    padding: 0.75rem 1.5rem;
    font-size: 1rem;
  }
</style>
