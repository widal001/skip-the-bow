---
interface Props {
  text: string;
  color?: string;
  backgroundColor?: string;
  category?: string;
}

const { text, color, backgroundColor, category } = Astro.props;
---

<span
  class="pill"
  data-category={category}
  style={`
    ${color ? `--pill-color: ${color};` : ""}
    ${backgroundColor ? `--pill-bg: ${backgroundColor};` : ""}
  `}
>
  {text}
</span>

<style>
  .pill {
    display: inline-block;
    padding: 0.5rem 1rem;
    background: var(--pill-bg, var(--category-secondary));
    color: var(--pill-color, var(--category-primary));
    border-radius: 9999px;
    font-size: 0.875rem;
    font-weight: 500;
    text-transform: capitalize;
  }
</style>
