---
interface Props {
  title: string;
  description?: string;
}

const { title, description = "A modern web application" } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />
    <title>{Astro.props.title}</title>
    <meta name="description" content={Astro.props.description} />
    <style>
      body {
        font-family: system-ui, sans-serif;
        margin: 0;
        padding: 0 1rem;
        line-height: 1.6;
        color: #222;
        background: #fefefe;
      }
      header {
        padding: 2rem 0 1rem;
        border-bottom: 1px solid #eee;
      }
      main {
        max-width: 720px;
        margin: 0 auto;
        padding-bottom: 4rem;
      }
      h1 {
        font-size: 2rem;
        margin-bottom: 0.5rem;
      }
      p.description {
        color: #555;
        margin-bottom: 2rem;
      }
    </style>
  </head>
  <body>
    <main>
      <slot />
    </main>
  </body>
</html>
